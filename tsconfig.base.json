      "@app/frontend-pages-home": ["libs/frontend/pages/home/src/index.ts"],
      "@app/frontend-pages-player": [
        "libs/frontend/pages/player/src/index.ts"
      ],
      "@app/frontend-root": ["libs/frontend/root/src/index.ts"],
      "@app/frontend-seo": ["libs/frontend/modules/seo/src/index.ts"],
      "@app/frontend-translation": [
        "libs/frontend/modules/translation/src/index.ts"
      ],
      "@app/frontend-translation/languages": [
        "libs/frontend/modules/translation/languages/src/index.ts"
      ],
      "@app/frontend-translation/selection": [
        "libs/frontend/modules/translation/selection/src/index.ts"
