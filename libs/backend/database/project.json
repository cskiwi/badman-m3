{
  "name": "backend-database",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backend/database/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "migration-generate": {
      "command": "ts-node -r tsconfig-paths/register --project {projectRoot}/tsconfig.json ./node_modules/typeorm/cli migration:generate -d {projectRoot}/src/orm.config -p {projectRoot}/src/migrations/{args.name}",
      "options": {
        "envFile": "{workspaceRoot}/.env"
      }
    },
    "migration-run": {
      "command": "ts-node -r tsconfig-paths/register --project {projectRoot}/tsconfig.json ./node_modules/typeorm/cli migration:run -d {projectRoot}/src/orm.config",
      "options": {
        "envFile": "{workspaceRoot}/.env"
      }
    },
    "migration-revert": {
      "command": "ts-node -r tsconfig-paths/register --project {projectRoot}/tsconfig.json ./node_modules/typeorm/cli migration:revert -d {projectRoot}/src/orm.config",
      "options": {
        "envFile": "{workspaceRoot}/.env"
      }
    }
  }
}
